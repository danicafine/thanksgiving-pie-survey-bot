{
  "type": "record",
  "namespace": "survey.bot",
  "name": "survey",
  "doc": "Details for a single question survey.",
  "fields": [
        {
            "doc": "Unique survey identification number.",
            "name": "survey_id",
            "type": "int"
        },
        {
            "doc": "Survey question.",
            "name": "question",
            "type": "string"
        },
        {
            "doc": "Shorter survey summary for display purposes.",
            "name": "summary",
            "type": "string"
        },
        {
            "doc": "Survey response options.",
            "name": "options",
            "type": {
                "type": "array",  
                "items": "string"
            }
        },
        {
            "doc": "Boolean showing if survey is currently enabled.",
            "name": "enabled",
            "type": "boolean"
        }
    ]
}